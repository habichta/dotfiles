{
  "coc.preferences.formatOnSave": true,
  "inlayHint.enable": false,
  "signature.enable": true,
  "diagnostic.checkCurrentLine": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "html.format.enable": true,
  "javascript.autoClosingTags": true,
  "pyright.organizeimports.provider": "isort",
  "python.analysis.autoImportCompletions": true,
  "python.formatting.blackPath": "~/.dotfiles/configs/.config/nvim/venv/bin/black",
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,
  "python.sortImports.args": ["--line-length", "120", "--profile", "black"],
  "python.sortImports.path": "/usr/bin/isort",
  "snippets.snipmate.enable": false,
  "snippets.ultisnips.enable": true,
  "typescript.autoClosingTags": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "tsserver.enable": true,
  "tsserver.experimental.enableProjectDiagnostics": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.enable": true,
  "prettier.eslintIntegration": true,

  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/18.1.3/clangd_18.1.3/bin/clangd",
  "snippets.ultisnips.pythonPrompt": false,
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
