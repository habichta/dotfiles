{
  "coc.preferences.formatOnSave": true,
  "coc.preferences.hoverTarget": "float",
  "diagnostic.checkCurrentLine": true,
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "html.format.enable": true,
  "javascript.autoClosingTags": true,
  "pyright.organizeimports.provider": "isort",
  "python.analysis.autoImportCompletions": true,
  "python.formatting.blackArgs": ["--line-length", "120"],
  "python.formatting.blackPath": "~/.dotfiles/configs/.config/nvim/venv/bin/black",
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,
  "python.sortImports.args": ["--line-length", "120", "--profile", "black"],
  "python.sortImports.path": "/usr/bin/isort",
  "snippets.snipmate.enable": false,
  "snippets.ultisnips.enable": true,
  "typescript.autoClosingTags": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.enable": true,
  "prettier.eslintIntegration": true,

  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/16.0.2/clangd_16.0.2/bin/clangd"
}
